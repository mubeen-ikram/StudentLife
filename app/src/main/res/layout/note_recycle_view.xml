<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:id="@+id/currentNotesLayout"
        android:layout_height="wrap_content">
    <LinearLayout
        android:background="@drawable/singlelayout_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/showHideChild"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:src="@drawable/ic_show_24dp"
            android:visibility="invisible" />

        <EditText
            android:id="@+id/showNoteDataET"
            style="@style/EditTextStyleBlack"
            android:layout_width="0dp"
            android:paddingStart="5dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:layout_margin="5dp"
            android:layout_height="wrap_content"
            android:layout_weight="17"
            android:background="@drawable/edittext_background"
            android:inputType="textShortMessage"
            android:shadowColor="@android:color/transparent"
            android:textColor="@color/colorWhite"
            android:autofillHints="Notes Information" />

        <ImageView
            android:id="@+id/removeNote"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_delete_24dp"
            android:visibility="visible" />
    </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add New Element"
        android:visibility="gone"
        android:id="@+id/addNote" />

<!--    <androidx.recyclerview.widget.RecyclerView-->
<!--        android:id="@+id/child_notes_recycleview"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content" />-->

</LinearLayout>