<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:padding="2dp"

    android:background="@drawable/gradient_activity_back"
    android:layout_height="wrap_content"
>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    app:cardCornerRadius="10dp"
    android:elevation="30dp"
    android:layout_margin="5dp"
    android:padding="10dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:padding="10dp"
        android:background="@color/colorCardBackground"
        android:orientation="vertical"
        android:id="@+id/courseLinearLayout"
        android:layout_height="wrap_content">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="Course Name"
        android:layout_marginBottom="5dp"
        android:textColor="@color/colorCourseName"
        android:id="@+id/notesCourseName"/>
<!--        <TextView-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="0.3dp"-->
<!--            android:background="@drawable/sepration_small"/>-->
        <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
            android:layout_marginTop="5dp"
        android:text="Notes Data\n \t\t\tMy new data\n\t\t\t\t\t\tMy 2nd line new data"
        android:lineSpacingExtra="6dp"
        android:textSize="16dp"
        android:textColor="@color/colorNotesData"
        android:id="@+id/notesNotesData"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>
