<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorBlack"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        app:cardCornerRadius="10dp"
        android:padding="20dp"
        app:cardBackgroundColor="@color/colorCardBackground"
        android:elevation="10dp"
        android:layout_width="match_parent"
    android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:padding="20dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

    <EditText
        android:shadowColor="@android:color/transparent"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:hint="Course Name"
        android:textColorHint="@color/colorLineGray"
        android:background="@drawable/edittext_background"
        style="@style/EditTextStyleBlack"
        android:id="@+id/courseNameET"
        android:inputType="text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:background="@drawable/edittext_background"
        android:shadowColor="@android:color/transparent"
        android:layout_margin="10dp"
        android:hint="Course Hours"
        android:padding="10dp"
        android:inputType="number"
        android:textColorHint="@color/colorLineGray"
        style="@style/EditTextStyleBlack"
        android:id="@+id/courseHoursET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:shadowColor="@android:color/transparent"
        android:layout_margin="10dp"
        android:background="@drawable/edittext_background"
        android:textCursorDrawable="@color/colorLineGray"
        android:hint="Instructor Information"
        android:padding="10dp"
        android:inputType="textPersonName"
        android:textColorHint="@color/colorLineGray"
        style="@style/EditTextStyleBlack"
        android:id="@+id/courseInstructorET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:text="Create"
        android:textColor="@color/colorLineGray"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_background"
        android:id="@+id/createCourseBtn"/>
        </LinearLayout>
</androidx.cardview.widget.CardView>
</LinearLayout>
